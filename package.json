    "@fontsource/noto-sans": "^5.1.0",
    "@mantine/core": "^7.14.3",
    "@mantine/dates": "^7.17.0",
    "@mantine/hooks": "^7.14.3",
    "@mantine/notifications": "^7.17.0",
    "@phosphor-icons/react": "^2.1.7",
    "dayjs": "^1.11.13",
    "mantine-form-zod-resolver": "^1.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.0.2",
    "uuid": "^11.0.5",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/estree": "^1.0.6",
    "@types/react": "^18.3.12",
